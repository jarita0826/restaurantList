<h1 class="mb-1 restaurant-show-title">{{restaurants.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-concierge-bell"></i>
          類別：
        </span>
        {{restaurants.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-home"></i>
          地址：
        </span>
        {{restaurants.location}}
        <a href="{{restaurants.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-map-marker-alt"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-phone-alt"></i>
          電話：
        </span>
        {{restaurants.phone}}
      </p>

      <p class="mb-5">{{restaurants.description}}</p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{restaurants.image}}" alt="{{restaurants.name}}"
        style="max-width: 600px;">

      <p class="mb-1">
        <span class="text-secondary">
          <a class="back" type="button" onclick="history.back()" value="回到上一頁" target="_blank">
          <i class="fas fa-angle-double-left"></i>
          回上一頁
          </a>
        </span>
      </p>
      
        
      
    </div>
  </div>
</div>